<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title with Badge Count -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/notification_list_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="اعلان‌ها"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <!-- Optional: Add action buttons here -->
        <TextView
            android:id="@+id/mark_all_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="خوانده شده"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Notifications RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notifications_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/empty_state_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="هیچ اعلانی وجود ندارد"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:visibility="gone"
        android:drawableTop="@drawable/ic_notification"
        android:drawablePadding="16dp"
        android:drawableTint="?android:attr/textColorSecondary" />

</LinearLayout>

